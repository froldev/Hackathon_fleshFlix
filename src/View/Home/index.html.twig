{% extends 'layout.html.twig' %}

{% block content %}

{% for question, values in questions %}

<form>

   <h2>{{ question }}</h2>

    {% for value in values %}

        <div class="form-check">
            <input class="form-check-input" type="radio" value="" id="defaultCheck1" name="{{  question }}">
            <label class="form-check-label" for="defaultCheck1">
                <a><img src="{{ value }}" width=350px></a>
            </label>
        </div>

    {%  endfor %}

</form>

    {%  endfor %}


{% endblock %}
