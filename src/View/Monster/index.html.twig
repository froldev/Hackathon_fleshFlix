{% extends 'layout.html.twig' %}
{% block content %}

    <h1>Quel victime es-tu ?</h1>
        <form method="post" action="monster/profils">
            {% for question, values in questions %}
            <h2>{{ question }}</h2>
            <div class="row">
                {%  for value in values %}
                        <div class="form-check">
                            <input class="checkbox" type="radio" value="{{ value.Lettre }}" id="defaultCheck1" name="{{ question }}">
                            <label class="form-check-label" for="defaultCheck1">
                                <a href=""><img class="imageForm" src="{{ value.Image }}"></a>
                                <div class="descriptionImage">
                                    <p>{{ value.Text }}</p>
                                </div>
                            </label>
                        </div>
                {% endfor %}
            </div>
            {%  endfor %}
            <button type="submit">Submit</button>
        </form>
{% endblock %}

